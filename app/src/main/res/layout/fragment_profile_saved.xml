<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#fff0f0f0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_comment_title"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:gravity="center"
            android:text="나의 세줄일기"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="하루를 돌아보며 나의 삶을 기억합니다" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_profile_profileimage"
                style="@style/ProfileImage"
                android:layout_weight="5"
                app:srcCompat="@drawable/pic_user_profile" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical"
                android:paddingLeft="14dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fragment_profile_textview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:maxLength="10"
                        android:text="죄송죄송개죄송"
                        android:textSize="18dip" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="72dip"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text=" 세줄작가"
                        android:textSize="18dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_profile_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="안녕하세요? \n세줄일기를 쓰고 있는 세줄작가입니다.\n제 삶의 이야기 책들을 만나보세요."
                    android:textSize="13dip" />

                <Button
                    android:id="@+id/btn_profile_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="프로필 수정" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="혼자쓰는 일기"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="같이 쓰는 일기"
                android:textSize="16dip" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ScrollView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profileMakeSoloDiary"
                    style="@style/DiaryBookLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        android:scaleType="fitCenter"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        app:srcCompat="@drawable/icon_new_diary" />

                    <TextView
                        style="@style/DiaryTextView"
                        android:background="#FAFAFA"
                        android:gravity="center_horizontal"
                        android:text="새 일기책\n만들기"
                        android:textSize="16dip" />
                </LinearLayout>

                <LinearLayout
                    style="@style/DiaryLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/testimage2" />

                    <TextView
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profileMakeDuoDiary"
                    style="@style/DiaryBookLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        android:scaleType="fitCenter"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        app:srcCompat="@drawable/icon_new_diary" />

                    <TextView
                        style="@style/DiaryTextView"
                        android:background="#FAFAFA"
                        android:gravity="center_horizontal"
                        android:text="새 일기책\n만들기"
                        android:textSize="16dip" />
                </LinearLayout>

                <LinearLayout
                    style="@style/DiaryLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/testimage" />

                    <TextView
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>