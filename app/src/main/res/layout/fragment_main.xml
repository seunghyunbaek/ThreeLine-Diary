<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff0f0f0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#00ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment_main_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="세줄일기"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/fragment_main_search"
                android:layout_width="40dip"
                android:layout_height="40dip"
                app:srcCompat="@drawable/icon_search" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="일기를 통해 서로의 삶을 바라봅니다" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="@dimen/icon_search"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="right"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_btn_orderby" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:weightSum="2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/mainFragmentDiary"
                    style="@style/DiaryLinearLayout">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/testimage2" />

                    <TextView
                        android:id="@+id/item1TextView"
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout style="@style/DiaryLinearLayout">

                    <ImageView
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/login_pencil" />

                    <TextView
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/fragment_main_test"
                    style="@style/DiaryLinearLayout">

                    <ImageView
                        android:id="@+id/imageView16"
                        style="@style/DiaryImageVIew"
                        android:src="@drawable/app_intro" />

                    <TextView
                        android:id="@+id/item3"
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout style="@style/DiaryLinearLayout">

                    <ImageView
                        android:id="@+id/imageView17"
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/testimage" />

                    <TextView
                        android:id="@+id/textView17"
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout style="@style/DiaryLinearLayout">

                    <ImageView
                        android:id="@+id/imageView19"
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/testimage2" />

                    <TextView
                        android:id="@+id/textView19"
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout style="@style/DiaryLinearLayout">

                    <ImageView
                        android:id="@+id/imageView20"
                        style="@style/DiaryImageVIew"
                        app:srcCompat="@drawable/login_pencil" />

                    <TextView
                        android:id="@+id/textView20"
                        style="@style/DiaryTextView"
                        android:text="TextView" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>

