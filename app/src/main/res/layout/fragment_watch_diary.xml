<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    tools:context=".WatchDiaryFragment">

    <ImageView
        android:id="@+id/fragment_watchdiary_content_image"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/default_page_image" />

    <TextView
        android:id="@+id/fragment_watchdiary_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="4"
        android:text="작성된 3줄일기를 볼 수 있습니다"
        android:textSize="18dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_watchdiary_content_hidden"
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_btn_hidden_footage"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fragment_watchdiary_content_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="2019년 4월 24일" />
    </LinearLayout>

</LinearLayout>