<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppThemeNoActionBar"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/activity_login_tv_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="세 줄로 남기는 내 마음"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/activity_login_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_tv_sub_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="세줄일기"
        android:textColor="@android:color/black"
        android:textSize="31dp" />

    <ImageView
        android:id="@+id/activity_login_pecil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_tv_title"
        android:layout_centerInParent="true"
        android:layout_marginBottom="230dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:foregroundGravity="center"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/login_pencil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/activity_login_button_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffdd4b39"
            android:minHeight="40dp"
            android:text="@string/login_start_with_google"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_login_button_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ff4267b2"
            android:minHeight="40dp"
            android:text="@string/login_start_with_facebook"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_login_button_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#ff62757b"
            android:minHeight="40dp"
            android:text="@string/login_start_with_email"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>