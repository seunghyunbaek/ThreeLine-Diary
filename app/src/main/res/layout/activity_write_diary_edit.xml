<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteDiaryEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.6"
        android:background="#2E2E2E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_writediaryedit_back"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/activity_writediaryedit_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="일기책제목 세줄일기"
            android:textColor="#FCFCFC"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/activity_writediaryedit_complete"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_weight="6"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_writediaryedit_edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="당신의 삶을 세줄로 기록하세요"
            android:inputType="textPersonName"
            android:maxLength="24"
            android:singleLine="true"
            android:textSize="18dip" />

        <EditText
            android:id="@+id/activity_writediaryedit_edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="24"
            android:singleLine="true"
            android:textSize="18dip" />

        <EditText
            android:id="@+id/activity_writediaryedit_edit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="24"
            android:textSize="18dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_writediaryedit_hidden"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/icon_btn_hidden_footage" />

            <ImageView
                android:id="@+id/activity_writediaryedit_camera"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                app:srcCompat="@drawable/icon_gallery_camera" />

            <TextView
                android:id="@+id/activity_writediaryedit_date"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="2019년 4월 24일/" />

            <EditText
                android:id="@+id/activity_writediaryedit_location"
                android:layout_width="56dip"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="장소에서"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:singleLine="true"
                android:textSize="12dip" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_writediaryedit_selectimage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pic_diary_page_image" />

</LinearLayout>