<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiaryBookEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.4"
        android:background="#2E2E2E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_diary_book_edit_back"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/activity_diary_book_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="일기책 수정하기"
            android:textColor="#FCFCFC"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/activity_diary_book_edit_complete"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_check" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="30dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_diary_book_edit_edit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="제목은 2줄로"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:singleLine="true"
                android:textSize="30dip" />

            <EditText
                android:id="@+id/activity_diary_book_edit_edit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="작성해주세요"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:singleLine="true"
                android:textSize="30dip" />

            <TextView
                android:id="@+id/activity_diary_book_edit_edit3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="세줄일기"
                android:textSize="30dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_diary_book_edit_open"
            android:layout_width="110dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:srcCompat="@drawable/icon_new_diary_lock_off" />

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_diary_book_edit_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pic_diary_cover" />
</LinearLayout>