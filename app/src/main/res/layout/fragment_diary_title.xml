<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchDiaryTitleFragment">

    <ImageView
        android:id="@+id/fragment_watchdiarytitle_cover"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/fragment_watchdiarytitle_diarytitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="8"
        app:srcCompat="@drawable/default_page_image" />

    <ImageView
        android:id="@+id/fragment_watchdiarytitle_profileimage2"
        android:layout_width="90dip"
        android:layout_height="90dip"
        app:layout_constraintEnd_toStartOf="@+id/fragment_watchdiarytitle_profileimage"
        app:layout_constraintTop_toTopOf="@+id/fragment_watchdiarytitle_profileimage"
        app:srcCompat="@drawable/pic_user_profile" />

    <ImageView
        android:id="@+id/fragment_watchdiarytitle_profileimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_watchdiarytitle_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pic_user_profile" />

    <TextView
        android:id="@+id/fragment_watchdiarytitle_writer"
        android:layout_width="0dp"
        android:layout_height="40dip"
        android:background="#B0949494"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dip"
        android:text="작성자"
        android:textColor="@android:color/white"
        android:textSize="26dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_watchdiarytitle_profileimage"
        app:layout_constraintTop_toTopOf="@id/fragment_watchdiarytitle_profileimage" />

    <TextView
        android:id="@+id/fragment_watchdiarytitle_writer_introduce"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:background="#B0949494"
        android:paddingLeft="10dip"
        android:textColor="@android:color/white"
        android:textSize="20dip"
        app:layout_constraintBottom_toBottomOf="@id/fragment_watchdiarytitle_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_watchdiarytitle_profileimage"
        app:layout_constraintTop_toBottomOf="@id/fragment_watchdiarytitle_writer"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/fragment_watchdiarytitle_diarytitle"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="10dip"
        android:text="부화기로\n병아리를 만나는\n세줄일기"
        android:textSize="26dip"
        app:layout_constraintBottom_toTopOf="@id/fragment_watchdiarytitle_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_watchdiarytitle_cover"
        app:layout_constraintVertical_weight="4" />

    <TextView
        android:id="@+id/fragment_watchdiarytitle_date"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="right|center_vertical"
        android:text="TextView"
        android:textSize="16dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_watchdiarytitle_diarytitle"
        app:layout_constraintVertical_weight="1" />
</android.support.constraint.ConstraintLayout>