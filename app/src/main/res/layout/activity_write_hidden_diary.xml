<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteHiddenDiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.6"
        android:background="#2E2E2E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_writehiddendiary_back"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/activity_writehiddendiary_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="숨은글쓰기"
            android:textColor="#FCFCFC"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/activity_writehiddendiary_complete"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_check" />

    </LinearLayout>

    <EditText
        android:id="@+id/activity_writehiddendiary_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="19"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="start|top"
        android:hint="세 줄에 담지 못한 마음을 숨은글에 남기세요"
        android:inputType="textMultiLine|text"
        android:maxLength="300"
        android:textSize="14dip" />
</LinearLayout>