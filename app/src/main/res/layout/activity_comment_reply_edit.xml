<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommentReplyEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="#F7F7F7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_comment_reply_edit_back"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_left_arrow" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="답글 수정하기"
            android:textColor="@android:color/black"
            android:textSize="18dip" />

        <ImageView
            android:id="@+id/activity_comment_reply_edit_complete"
            android:layout_width="0dip"
            android:layout_height="@dimen/icon_search"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/icon_check_black" />

    </LinearLayout>

    <EditText
        android:id="@+id/activity_comment_reply_edit_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="20dip"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textMultiLine|textPersonName" />

</LinearLayout>